#start_title {
    color: #2e1a47;
    font: 100px;
    qproperty-alignment: AlignCenter;
    text-align: center;
    margin: 0px;
    padding: 0px;
}

#auth_card {
    max-width: 500px;
    max-height: 200px;
    border-radius: 5px;
    border: 1px solid grey;
    padding: 40px;
}

#username_field {
    background-color: grey;
    border: 1px solid darkgrey;
    border-radius: 5px;
    color: black;
    font-size: x-large;
    padding: 5%;
    margin: 0px;
}

#login_button, #register_button {
    background-color: #2e1a47;
    border: 1px solid darkgrey;
    border-radius: 5px;
    color: lightgrey;
    font-size: large;
    padding: 5%;
    width: 70%;
}

#register_button {
    margin-right: 20px;
}

#input_post {
    border-radius: 5px;
    border: 1px solid #2e1a47;
    color: black;
    font-size: x-large;
    padding: 5%;
    margin-left: 10px;
    margin-right: 10px;
    margin-bottom: 10px;
}

#create_post_button {
    background-color: #2e1a47;
    border: 1px solid #2e1a47;
    border-radius: 5px;
    color: white;
    font-size: x-large;
    padding: 5%;
    margin-right: 10px;
    margin-bottom: 10px;
}

#horizontal_separator {
    margin-left: 10px;
    margin-right: 10px;
}

#post_card {
    border-radius: 5px;
    border: 1px solid #2e1a47;
}

#post_title {
    border: 0px;
}

#post_username {
    color: #2e1a47;
    font: large;
    font-weight: bold;
}

#post_date {
    color: grey;
    font: small;
}

#post_body {
    margin-left: 7px;
    margin-right: 7px;
    margin-bottom: 7px
}

#scroll_posts, #info_widget, #followers_scroll, #followers_list {
    border: 0px;
    margin: 0px;
}

#followers_widget, #following_widget {
    border-radius: 5px;
    border: 1px solid #2e1a47;
    margin-left: 10px;
    margin-top: 0px;
}

#followers_title, #following_title {
    color: #2e1a47;
    font: 15px;
    font-weight: bold;
}

